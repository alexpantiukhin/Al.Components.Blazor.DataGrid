@using Al.Components.Blazor.DataGrid.Model.Enums

@inherits HandRenderComponent
@implements IDisposable


<colgroup>
    @if (Rows.SelectableRowMode == SelectableRowMode.Multiple)
    {
        <col class="selector-column" width="50" />
    }

    @if (Rows.ShowDetail)
    {
        <col class="expander-column" width="50" />
    }

    @foreach (var column in Columns.Visibilities)
    {
        <col width="@(column.Item.Width)" />
    }
    <col class="compensator" />
</colgroup>