@typeparam T
@inherits HandRenderComponent

<table>
    <GridColgroup T=T
                  DataGridModel="DataGridModel" />

    <thead>
        <tr>
            @if (DataGridModel.Rows.SelectableRowMode == SelectableRowMode.Multiple)
            {
                <th class="selector">&nbsp;</th>
            }

            @if (DataGridModel.Rows.ShowDetail)
            {
                <th class="expander fixed">&nbsp;</th>
            }

            @foreach (var column in DataGridModel.Columns.Visibilities)
            {
                <HeaderColumn T=T
                          DataGridModel=DataGridModel
                          ColumnModel=column />
            }
            <td class="compensator">&nbsp;</td>
        </tr>
    </thead>
</table>
