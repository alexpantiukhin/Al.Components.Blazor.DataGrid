@using System.ComponentModel
@typeparam T
@inherits HandRenderComponent
@implements IDisposable

<th @onclick="ClickSortHandler">

    <div class="column-header">
        <div class="column-header-content">
            @if (ColumnModel.HeaderTemplate != null)
            {
                @((RenderFragment)ColumnModel.HeaderTemplate)
            }
            else
            {
                @(ColumnModel.Title)
            }
        </div>
        @if (ColumnModel.Sortable)
        {
            <span class="order @(ColumnModel.Sort == null ? "" : ("show " + (ColumnModel.Sort == ListSortDirection.Ascending ? "asc" : "desc")))">
                @if (ColumnModel.Sort == ListSortDirection.Ascending)
                {
                    <span>&#8593;</span>
                }
                else if (ColumnModel.Sort == ListSortDirection.Descending)
                {
                    <span>&#8595;</span>
                }
            </span>
        }

    </div>
</th>
