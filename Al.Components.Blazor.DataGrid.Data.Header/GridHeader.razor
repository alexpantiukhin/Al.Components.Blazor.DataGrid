@using Al.Components.Blazor.DataGrid.Model.Enums
@inherits HandRenderComponent

<table>
    <GridColgroup DataGridModel="DataGridModel" />

    <thead>
        <tr>
            @if (DataGridModel.Rows.SelectableRowMode == SelectableRowMode.Multiple)
            {
                <th class="selector">&nbsp;</th>
            }

            @if (DataGridModel.Rows.ShowDetail)
            {
                <th class="expander fixed">&nbsp;</th>
            }

            @foreach (var column in Columns.FrozenLeft)
            {
                <HeaderColumn DataGridModel=DataGridModel
                          UniqueKeyResizeArea=UniqueKeyResizeArea
                          ColumnModel=column />
            }

            @foreach (var column in Columns.Frozenless)
            {
                <HeaderColumn DataGridModel=DataGridModel
                          UniqueKeyResizeArea=UniqueKeyResizeArea
                          ColumnModel=column />
            }

            @foreach (var column in DataGridModel.Columns.FrozenRight)
            {
                <HeaderColumn DataGridModel=DataGridModel
                          UniqueKeyResizeArea=UniqueKeyResizeArea
                          ColumnModel=column />
            }
            <td class="compensator">&nbsp;</td>
        </tr>
    </thead>
</table>
